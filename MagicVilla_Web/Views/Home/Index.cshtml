@using Microsoft.AspNetCore.Components
@model IEnumerable<magicVilla_Web.Models.Dto.VillaDTO>

<!-- This is the main image for the page, likely a banner or a header image -->
<img class="d-block w-100" src="images/home/slide1.jpg" alt="">
<hr /> <!-- Horizontal line for visual separation -->
<!-- Container for the villas; the custom gutter style removes spacing between columns -->
<div class="row" style="--bs-gutter-x:0">
    @foreach (var villa in Model)
    {
        <!-- Loop through each villa in the provided model -->
        <div class="p-4 col-md-12 col-lg-6">
            <!-- Villa container with padding, full width on medium screens, half on large -->
            <div class="row" style="border-radius:20px;border: 1px solid #ffffff">
                <!-- Nested row for villa details with styled border -->
                <div class="col-4">
                    <!-- Villa image with rounded corners -->
                    <img class="d-block w-100" style="border-radius:20px;" src="@villa.ImageUrl" alt="First slide">
                </div>

                <div class="col-8">
                    <!-- Placeholder for villa name, currently empty -->
                    <p class="card-title text-warning" style="font-size:xx-large">@villa.Name</p>
                    <!-- Villa details displayed as HTML -->
                    <p class="card-text">
                        @((MarkupString)villa.Details)
                    </p>
                </div>
                <div class="col-12">
                    <div class="row pb-3 pt-2">
                        <!-- Nested row for booking and villa info with padding -->
                        <div class="col-4">
                            <!-- Booking button -->
                            <a href="" class="btn btn-success form-control btn-block">Book</a>
                        </div>
                        <div class="col-4">
                            <!-- Display max occupancy and villa size -->
                            <span class="">Max Occupany: @villa.Occupancy adults</span><br />
                            <span class=" pt-1">Villa Size : @villa.Sqft sqft</span><br />
                        </div>
                        <div class="col-4">
                            <!-- Display villa rate with styling -->
                            <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px;">
                                USD
                                <span style="border-bottom:1px solid #ff6a00">
                                    @villa.Rate.ToString("c")
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
