@model IEnumerable<magicVilla_Web.Models.Dto.BookingDTO>
@{
    ViewData["Title"] = "My Bookings";
}

<div class="container">
    <h2 class="mb-4">My Bookings</h2>
    
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <h5>No bookings found</h5>
            <p>You haven't made any bookings yet. <a href="@Url.Action("Index", "Home")">Browse our villas</a> to make a booking.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var booking in Model)
            {
                var nights = (booking.CheckOutDate - booking.CheckInDate).Days;
                var statusBadgeClass = booking.Status switch
                {
                    "Confirmed" => "bg-success",
                    "Pending" => "bg-warning",
                    "Cancelled" => "bg-danger",
                    "Completed" => "bg-info",
                    _ => "bg-secondary"
                };

                <div class="col-md-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@booking.VillaName</h5>
                            <span class="badge @statusBadgeClass">@booking.Status</span>
                        </div>
                        <div class="card-body">
                            <p><strong>Booking ID:</strong> #@booking.Id</p>
                            <p><strong>Check-in:</strong> @booking.CheckInDate.ToString("MMM dd, yyyy")</p>
                            <p><strong>Check-out:</strong> @booking.CheckOutDate.ToString("MMM dd, yyyy")</p>
                            <p><strong>Duration:</strong> @nights night(s)</p>
                            <p><strong>Guests:</strong> @booking.NumberOfGuests</p>
                            <p><strong>Total Cost:</strong> <span class="text-success fw-bold">$@booking.TotalCost.ToString("N2")</span></p>
                            <p><strong>Booking Date:</strong> @booking.CreatedDate.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    
    <div class="mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
    </div>
</div>

